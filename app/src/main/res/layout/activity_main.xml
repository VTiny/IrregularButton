<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">

        <net.hrsoft.irregularbutton.widget.IrregularButton
            android:id="@+id/color01"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/select01"
            android:gravity="center"></net.hrsoft.irregularbutton.widget.IrregularButton>

        <net.hrsoft.irregularbutton.widget.IrregularButton
            android:id="@+id/color02"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/select02"
            android:gravity="center"></net.hrsoft.irregularbutton.widget.IrregularButton>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="125dp">

        <net.hrsoft.irregularbutton.widget.IrregularButton
            android:id="@+id/color03"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/select03"
            android:gravity="center"></net.hrsoft.irregularbutton.widget.IrregularButton>

        <net.hrsoft.irregularbutton.widget.IrregularButton
            android:id="@+id/color04"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/select04"
            android:gravity="center"></net.hrsoft.irregularbutton.widget.IrregularButton>

        <net.hrsoft.irregularbutton.widget.IrregularButton
            android:id="@+id/color05"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/select05"
            android:gravity="center"></net.hrsoft.irregularbutton.widget.IrregularButton>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/group01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="270dp">

        <net.hrsoft.irregularbutton.widget.IrregularButton
            android:id="@+id/color06"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/select06"
            android:gravity="center"></net.hrsoft.irregularbutton.widget.IrregularButton>

        <net.hrsoft.irregularbutton.widget.IrregularButton
            android:id="@+id/color07"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/select07"
            android:gravity="center"></net.hrsoft.irregularbutton.widget.IrregularButton>

    </LinearLayout>



</RelativeLayout>
